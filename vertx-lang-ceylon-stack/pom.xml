              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/descriptors</outputDirectory>
              <resources>
                <resource>
                  <directory>descriptors</directory>
                  <filtering>true</filtering>
