              <userRepos>
                <user>${repo.dir}</user>
              </userRepos>
              <out>${repo.dir}</out>
              <javacOptions>-target 8</javacOptions>
              <sources>
                <source>
                  <directory>${project.build.directory}/ceylon/main</directory>
                  <includes>
                    <include>**/*.ceylon</include>
                  </includes>
                </source>
              </sources>
            </configuration>
